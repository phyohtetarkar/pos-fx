<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jsoft.pos.view.CategoriesView">
   <stylesheets>
      <URL value="@../application.css" />
      <URL value="@../color.css" />
      <URL value="@../jfx-common.css" />
   </stylesheets>
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <JFXTextField fx:id="filter" prefWidth="200.0" promptText="Category name" styleClass="operation-text-field" />
            <JFXButton onAction="#clear" prefHeight="40.0" prefWidth="100.0" text="Clear">
               <styleClass>
                  <String fx:value="operation-btn" />
                  <String fx:value="color-primary" />
               </styleClass>
               <tooltip>
                  <Tooltip text="Clear Text" />
               </tooltip>
            </JFXButton>
            <JFXButton layoutX="690.0" layoutY="18.0" onAction="#add" prefHeight="40.0" prefWidth="100.0" text="Add">
               <styleClass>
                  <String fx:value="operation-btn" />
                  <String fx:value="color-primary" />
               </styleClass>
               <tooltip>
                  <Tooltip text="Add New Category" />
               </tooltip>
            </JFXButton>
         </children>
         <padding>
            <Insets bottom="8.0" top="8.0" />
         </padding>
         <styleClass>
            <String fx:value="space-24" />
            <String fx:value="padd-8" />
         </styleClass>
      </HBox>
      <StackPane VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="tableView">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <columns>
                  <TableColumn prefWidth="75.0" text="Name">
                  	<cellValueFactory>
                  		<PropertyValueFactory property="name" />
                  	</cellValueFactory>
                  </TableColumn>
                  <TableColumn prefWidth="75.0" text="Create User" />
                  <TableColumn prefWidth="75.0" text="Create Date">
                  	<cellValueFactory>
                  		<PropertyValueFactory property="createDate" />
                  	</cellValueFactory>
                  </TableColumn>
                  <TableColumn prefWidth="75.0" text="Update User" />
                  <TableColumn prefWidth="75.0" text="Update Date">
                  	<cellValueFactory>
                  		<PropertyValueFactory property="updateDate" />
                  	</cellValueFactory>
                  </TableColumn>
                  <TableColumn prefWidth="75.0" text="Action" />
               </columns>
            </TableView>
         </children>
      </StackPane>
   </children>
   <styleClass>
      <String fx:value="main-layout" />
      <String fx:value="padd-8" />
      <String fx:value="space-8" />
      <String fx:value="color-white" />
   </styleClass>
</VBox>
